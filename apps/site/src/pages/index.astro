---
import RootLayout from '../layouts/RootLayout.astro';
---

<RootLayout>
  <div class="min-h-screen h-full flex flex-col">
    <main class="m-auto flex flex-col text-xl">
      <div class="flex flex-col space-y-4 text-center p-6 bg-muted/50 border rounded">
        <p class="font-bold uppercase text-2xl">{'<logtheway />'}</p>
        <a class="underline underline-offset-2" href={import.meta.env.PUBLIC_APP_BASE_URL}
          >Navigate to the web app</a
        >
      </div>
    </main>
  </div>
</RootLayout>
